@model frontend_admin.Models.ExamenConfiguracion
@{
    ViewData["Title"] = "Setup";
}

<h2>Configurar Examen</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <form asp-action="Setup" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="NumeroDisparos"></label>
                        <input asp-for="NumeroDisparos" class="form-control" />
                        <span asp-validation-for="NumeroDisparos" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Guardar Configuración</button>
                </form>
            </div>
        </div>
    </div>
</div>

